<div id="sign_form">
	<br><%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-inline"}) do |f| %>
	<div class='form-group'>
		<div class='input-group'>
			<%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
		</div>
	</div>
	<div class='form-group'>
		<div class='input-group'>
			<%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control" %>
		</div>
	</div>
	<div class='form-group'>
		<div class='input-group'>
			<%= f.submit "Sign In", class: "btn btn-large btn-default"%>
		</div>
	</div>
	
	<div class='form-group'>
		<%= link_to 'Why Sign Up?', new_user_registration_path, class: "btn btn-large btn-default", method: "get" %>
	</div>
	<% end %>
</div>

