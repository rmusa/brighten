<div id="sign_up_form">


  <div id="sign_title">
    <br><p>Sign up</p>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.text_field :name, :placeholder => "Name"  %></div><br>

    <div><%= f.email_field :email, autofocus: true, :placeholder => "Email"  %></div><br>

    <div><%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %></div><br>

    <div><%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Password Confirmation" %></div><br>

    <div>
      <%= f.label :profile_picture %>
      <div id="profile_picture_field">
        <%= f.file_field :profile_picture %>
      </div>
    </div>

    <div><br><%= f.submit "Sign up", class: "btn btn-large btn-primary"%></div>
  <% end %><br>

  <%= render "devise/shared/links" %><br>

</div>
