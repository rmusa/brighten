<div id="all_text">
  <div id="new_event_title">
    <p>New event: </p>
  </div>

  <%= form_for(@event, url: organization_events_path(params[:organization_id])) do |f| %>
  <div class="col-md-4">
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <br><%= f.label :date %><br>
        <%= f.date_field :date %>
      </div>
      <div class="field">
        <br><%= f.label :start_time %><br>
        <%= f.time_field :time %>
      </div>
      <div class="field">
        <br><%= f.label :end_time %><br>
        <%= f.time_field :endtime %>
      </div>
      <div class="field">
        <br><%= f.label :location %><br>
        <%= f.text_field :location %>
      </div>
      <div class="field">
        <br><%= f.label :description %><br>
        <%= f.text_area :description %>
      </div>
      <div class="field">
        <br><%= f.label :event_email %><br>
        <%= f.email_field :event_email %>
      </div>
  </div>

  <div class="col-md-6">
      <% Tag.all.pluck(:name).each do |tag| %>
        <div class="field form-group">
          <%= check_box_tag "tag_names[]", tag %>
          <span><%= tag %></span>
        </div>
      <% end %>
      
      <div class="actions">
        <br><%= f.submit class: "btn btn-primary"%><br><br>
      </div>
    <% end %>
    <%= link_to 'Cancel', organization_path(params[:organization_id]) %>
  </div>
</div>

