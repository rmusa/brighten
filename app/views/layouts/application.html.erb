<!DOCTYPE html>
<html>
	<head>
		<title>Brighten</title>
		<%= stylesheet_link_tag    'application', media: 'all' %>
		<%= javascript_include_tag 'application' %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<nav class="navbar navbar-default" role="navigation">
			<div class="container-fluid">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					</button>
					<%= link_to "Brighten", home_path, class: "navbar-brand" %>
				</div>
				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav">
						<li><%= link_to "Find an event", events_path %></li>
						<li><%= link_to "Find an organization", organizations_path %></li>
					</ul>
					<% if user_signed_in? %>
						<ul class="nav navbar-nav navbar-right">
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">Signed in as <%= current_user.name %> <span class="caret"></span></a>
								<ul class="dropdown-menu" role="menu">
									<li><%= link_to "Edit Profile", edit_user_registration_path %></li>
									<li class="divider"></li>
									<li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
								</ul>
							</li>
						</ul>
						<ul class="nav navbar-nav navbar-right">
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">My Organizations <span class="caret"></span></a>
								<ul class="dropdown-menu" role="menu">
									<% if current_user.organizations.empty? %>
										<li><p class="navbar-text">You have no organizations</p></li>
									<% else %>
										<% current_user.organizations.each do |organization| %>
											<li><%= link_to "#{organization.name}", organization_path(organization.id) %></li>
										<% end %>
									<% end %>
									<li class="divider"></li>
									<li><%= link_to "Add Organization", new_organization_path %></li>
								</ul>
							</li>
						</ul>
						<ul class="nav navbar-nav navbar-right">
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">My Events <span class="caret"></span></a>
								<ul class="dropdown-menu" role="menu">
									<% if current_user.events.empty? %>
										<li><p class="navbar-text">You are not attending any events</p></li>
									<% else %>
										<% current_user.events.each do |event| %>
										<li><%= link_to "#{event.name}", event_path(event.id) %></li>
										<% end %>
									<% end %>
								</ul>
							</li>
						</ul>
					<% end %>
				</div><!-- /.navbar-collapse -->
			</div><!-- /.container-fluid -->
		</nav>
			<div class="col-sm-2">
				<div class="sidebar-nav">
					<div class="navbar navbar-default" role="navigation">
						<div class="navbar-header">
							<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							</button>
							<span class="visible-xs navbar-brand">Sidebar menu</span>
						</div>
						<div class="navbar-collapse collapse sidebar-navbar-collapse">
							<div class="container">
								<ul class="nav navbar-nav">
									<li><%= image_tag current_user.profile_picture.url(:thumb), class: "img-circle user-profile-picture" %></li>
									<li class="navbar-text user-name"><%= current_user.name %></li>
									<%= yield :search %>
								</ul>
							</div>
						</div><!--/.nav-collapse -->
					</div><!--/.nav-header -->
				</div><!--/.sidebar-nav -->
			</div><!--col-sm-2 -->
			<div class="col-sm-10">
				<% if flash[:notice] %>
					<div class="alert alert-success"><%= flash[:notice] %></div>
				<% end %>
				<% if flash[:alert] %>
					<div class="alert alert-danger"><%= flash[:alert] %></div>
				<% end %>
				<%= yield %>
			</div><!--/.col-sm-10 -->
	</body>
</html>