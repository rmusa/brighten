<%= form_tag events_path, method: :get do %>
	<%= select_tag :tag, options_for_select(Tag.all.pluck(:name), params[:tag]), prompt: "Search by tag" %> <br>
	<br><%= text_field_tag :q, params[:q], placeholder: "Search by name" %> <br>
	<div class="form-group">
		<br><label for="input-start-date">Start date</label>
		<br><%= date_field_tag :start_date, params[:start_date], id: "input-start-date" %> <br>
	</div>
	<div class="form-group">
		<label for="input-end-date">End date</label>
		<br><%= date_field_tag :end_date, params[:end_date], id:"input-end-date" %> <br>
	</div>
	<%= submit_tag "Submit", class: "btn btn-primary" %> <br><br>
<% end %>