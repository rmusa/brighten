<div id="all_text">
  <div id="new_event_title">
    <p>Edit organization: </p>
  </div>

  <div class="col-md-4">
    <%= form_for(@organization) do |f| %>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div>
        <br><%= f.label :picture %><br>
        <%= f.file_field :picture %>
      </div>
      <div class="field">
        <br><%= f.label :phone %><br>
        <%= f.telephone_field :phone %>
      </div>
      <div class="field">
        <br><%= f.label :email %><br>
        <%= f.email_field :email %>
      </div>
      <div class="field">
        <br><%= f.label :description %><br>
        <%= f.text_area :description %>
      </div>
      <div class="field">
        <br><%= f.label :website %><br>
        <%= f.text_field :website %>
      </div>
      <div class="field">
        <br><%= f.label :address %><br>
        <%= f.text_field :address %>
      </div>
  </div>

  <div class="col-md-8">
      <% Tag.all.pluck(:name).each do |tag| %>
        <div class="field form-group">
          <%= check_box_tag "tag_names[]", tag %>
          <span><%= tag %></span>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit class: "btn btn-primary"%><br><br>
      </div>
    <% end %>

    <%= link_to 'Back', user_path(current_user.id) %>
  </div>
</div>


