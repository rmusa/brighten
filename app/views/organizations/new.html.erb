<% if @organization.errors.any? %>
  <div class="errors">
    Your organization could not be saved:
    <ul>
      <% @organization.errors.full_messages.each do |message| %>
        <li><%=message%></li>
      <% end %>
    </ul>
<% end %>

<div id="all_text">
  <div id="new_event_title">
    <p>New organization: </p>
  </div>
  
  <%= form_for(@organization) do |f| %>
  <div class="col-md-4">
    
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div>
        <br><%= f.label :picture %><br>
        <%= f.file_field :picture %>
      </div>
      <div class="field">
        <br><%= f.label :phone %><br>
        <%= f.telephone_field :phone %>
      </div>
      <div class="field">
        <br><%= f.label :email %><br>
        <%= f.email_field :email %>
      </div>
      <div class="field">
        <br><%= f.label :description %><br>
        <%= f.text_area :description %>
      </div>
      <div class="field">
        <br><%= f.label :website %><br>
        <%= f.text_field :website %>
      </div>
      <div class="field">
        <br><%= f.label :address %><br>
        <%= f.text_field :address %>
      </div><br>
  </div>

  <div class="col-md-6">
    <% Tag.all.pluck(:name).each do |tag| %>
      <div class="field form-group">
        <%= check_box_tag "tag_names[]", tag %>
        <span><%= tag %></span>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit class: "btn btn-primary"%><br><br>
    </div>
    <% end %>
    <%= link_to 'Back', events_path %>
  </div>
</div>


